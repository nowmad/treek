<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @item.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @item.title %></h3>
    <p><%= @item.description %></p>
    <p><%= @item.reference %></p>
    <o>
      <% @item.tags.each do |tag| %>
        <%= link_to tag.name, "#" %>
      <% end %>
    </p>
  </div>
</div>

<%= link_to 'Edit', edit_item_path(@item), class: "btn btn-link"%> |
<%= link_to 'Back', items_path, class: "btn btn-link"%>
