<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="table table-hover table table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= link_to 'Show', item, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-link"  %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, class: "btn btn-link" %>
