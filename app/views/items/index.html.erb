<p id="notice"><%= notice %></p>

<div class="row">
  <% @items.each do |item| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <td><%= image_tag item.image.url %>
        <div class="caption">
          <h3><%= item.title %></h3>
          <p><%= item.description %></p>
          <%= link_to 'Show', item, class: "btn btn-link" %>
          <%= link_to 'Edit', edit_item_path(item), class: "btn btn-link" %>
          <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
  <%= link_to tag.name, item_search_path(:term => params[:term] ? (params[:term].split('/') + [tag.name]).uniq.join('/') : tag.name), :class => css_class %>
<% end %>

<%= link_to 'New Item', new_item_path, class: "btn btn-link" %>
